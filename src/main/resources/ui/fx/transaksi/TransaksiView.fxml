<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.fx.transaksi.TransaksiController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Transaksi" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="ID Barang"/>
            <TextField fx:id="txtBarangId" promptText="Masukkan ID barang"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Qty"/>
            <TextField fx:id="txtQty" promptText="Jumlah"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Jenis"/>
            <ComboBox fx:id="cbJenis">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="MASUK"/>
                        <String fx:value="KELUAR"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>
    </HBox>

    <TextField fx:id="txtCatatan" promptText="Catatan (opsional)"/>

    <Button text="Simpan Transaksi" onAction="#handleSimpan"/>

    <Separator/>

    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <VBox VBox.vgrow="ALWAYS">
            <TableView fx:id="tblTransaksi" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colBarangId" text="ID Barang"  prefWidth="80"/>
                    <TableColumn fx:id="colQty"      text="Qty"        prefWidth="60"/>
                    <TableColumn fx:id="colJenis"    text="Jenis"      prefWidth="80"/>
                    <TableColumn fx:id="colTanggal"  text="Tanggal"    prefWidth="150"/>
                    <TableColumn fx:id="colCatatan"  text="Catatan"    prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="5" prefWidth="260">
            <Label text="Struk Transaksi" style="-fx-font-weight: bold;"/>
            <TextArea fx:id="txtStruk"
                      editable="false"
                      wrapText="true"
                      prefRowCount="18"/>
            <Button text="Print Struk"
                    maxWidth="Infinity"
                    onAction="#handlePrintStruk"/>
        </VBox>

    </HBox>

    <Label fx:id="lblStatus" textFill="red"/>

</VBox>
