<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ui.fx.main.MainController">

<left>
        <VBox spacing="10" prefWidth="250" style="-fx-background-color: #2b2d42;">
                <padding>
                        <Insets top="20" right="10" bottom="20" left="10"/>
                </padding>
                
                <Label text="INVENTARIS" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <Separator/>
                
                <Button text="Dashboard" maxWidth="Infinity"
                        onAction="#showDashboard"
                        styleClass="sidebar-button"/>

                <Button text="Transaksi" maxWidth="Infinity"
                        onAction="#showTransaksi"
                        styleClass="sidebar-button"/>

                <Button text="Barang" maxWidth="Infinity"
                        onAction="#showBarang"
                        styleClass="sidebar-button"/>

                <Button text="Supplier" maxWidth="Infinity"
                        onAction="#showSupplier"
                        styleClass="sidebar-button"/>
                
                <Region VBox.vgrow="ALWAYS"/>
                
                <Button text="Logout" maxWidth="Infinity"
                        onAction="#logout"
                        styleClass="sidebar-button"
                        style="-fx-text-fill: #ff4d4d; -fx-font-weight: bold;"/>
                
        </VBox>
</left>

<center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;"/>
</center>

</BorderPane>
