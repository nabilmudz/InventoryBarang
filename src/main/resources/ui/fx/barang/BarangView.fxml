<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.fx.barang.BarangController"
      spacing="12"
      style="-fx-padding: 20;">

    <Label text="Manajemen Barang"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Form Input -->
    <HBox spacing="10">
        <VBox spacing="5" prefWidth="150">
            <Label text="Nama Barang"/>
            <TextField fx:id="inputNama" promptText="Nama barang"/>
        </VBox>

        <VBox spacing="5" prefWidth="100">
            <Label text="Stok"/>
            <TextField fx:id="inputStok" promptText="Jumlah stok"/>
        </VBox>

        <VBox spacing="5" prefWidth="100">
            <Label text="Harga"/>
            <TextField fx:id="inputHarga" promptText="Harga"/>
        </VBox>

        <VBox spacing="5" prefWidth="100">
            <Label text="Supplier ID"/>
            <TextField fx:id="inputSupplier" promptText="ID Supplier"/>
        </VBox>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="10">
        <Button text="Simpan" onAction="#simpanBarang" style="-fx-padding: 8px 20px;"/>
        <Button text="Update" onAction="#updateBarang" style="-fx-padding: 8px 20px;"/>
        <Button text="Hapus" onAction="#hapusBarang" style="-fx-padding: 8px 20px;"/>
        <Button text="Bersihkan" onAction="#clearForm" style="-fx-padding: 8px 20px;"/>
    </HBox>

    <Separator/>

    <!-- Table View -->
    <Label text="Daftar Barang" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="tableBarang" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId"       text="ID"        prefWidth="50"/>
            <TableColumn fx:id="colNama"     text="Nama"      prefWidth="150"/>
            <TableColumn fx:id="colStok"     text="Stok"      prefWidth="80"/>
            <TableColumn fx:id="colHarga"    text="Harga"     prefWidth="100"/>
            <TableColumn fx:id="colSupplier" text="Supplier"   prefWidth="80"/>
        </columns>
    </TableView>

    <Label fx:id="statusLabel" textFill="red"/>

</VBox>
