<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.fx.supplier.SupplierController"
      spacing="12"
      style="-fx-padding: 20;">

    <Label text="Supplier"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Nama Supplier"/>
            <TextField fx:id="txtNama" promptText="Nama Supplier"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Kontak"/>
            <TextField fx:id="txtKontak" promptText="Nomor Kontak"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Alamat"/>
            <TextField fx:id="txtAlamat" promptText="Alamat Supplier"/>
        </VBox>
    </HBox>

    <HBox spacing="10">
        <Button text="Simpan" onAction="#handleSimpan"/>
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Delete" onAction="#handleDelete"/>
    </HBox>

    <Separator/>

    <TableView fx:id="tblSupplier">
        <columns>
            <TableColumn fx:id="colId"      text="ID"       prefWidth="50"/>
            <TableColumn fx:id="colNama"    text="Nama"     prefWidth="150"/>
            <TableColumn fx:id="colKontak"  text="Kontak"   prefWidth="120"/>
            <TableColumn fx:id="colAlamat"  text="Alamat"   prefWidth="200"/>
        </columns>
    </TableView>

    <Label fx:id="lblStatus" textFill="red"/>

</VBox>
